
@model List<Team>

@{
    int count = 0;

}

<h1>

    Teams
    <a class="btn btn-primary" asp-action="Create">Create</a>


</h1>




<div class "container">

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Position</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>

            @foreach(var item in Model)
            {
                count++;
      <tr>
          <th scope="row">@count</th>
          <td>@item.Name</td>
          <td>@item.Position</td>
         <td> <img src="~/Upload/Team/@item.ImgUrl" /></td>
         <td> <a class="btn btn-secondary" asp-action="Update" asp-route-id=@item.Id>Update</a>
              <a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
         
         
         
         </td>
        </tr>




            }

